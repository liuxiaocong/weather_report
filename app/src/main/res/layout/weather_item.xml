<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    xmlns:fresco="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/day"
            style="@style/title_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/weather_icon_start"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left|center_vertical"
            android:visibility="gone"
            fresco:placeholderImage="@null" />
        <TextView
            android:id="@+id/weather_text_start"
            style="@style/data_blue_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
        <TextView
            style="@style/data_red_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:text="转" />
        <TextView
            android:id="@+id/weather_text_end"
            style="@style/data_blue_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/weather_icon_end"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="left|center_vertical"
            fresco:placeholderImage="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/second_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温度" />

        <TextView
            android:id="@+id/temp_start"
            style="@style/data_red_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            style="@style/data_red_s"
            android:text="到"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/temp_end"
            style="@style/data_red_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/wind_style"
            style="@style/second_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/wind_power"
            style="@style/data_red_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="#FF8600"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>
